extends ../../layouts/default.pug
include ../../mixins/table-tree.pug

block main
    h1(class="mb-4") #{pageTitle}

    .card.mb-3
        .card-header List
        .card-body
            .row
                .col-8
                .col-4.text-right
                    a(
                        href=`/${prefixAdmin}/products-category/create`
                        class="btn btn-outline-success"
                    ) + New

            table(
                class="table table-hover table-sm"
            )
                thead
                    tr
                        th No.
                        th Image
                        th Title
                        th Position
                        th Status
                        th Action

                tbody
                    +table-tree(records)