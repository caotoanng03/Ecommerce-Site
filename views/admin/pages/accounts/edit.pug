extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
    h1(class="mb-4")= pageTitle

    +alert-success(3000)
    +alert-error(5000)

    if(roles)
        form(
            action=`/${prefixAdmin}/accounts/edit/${account.id}/?_method=PATCH`
            method="POST"
            enctype="multipart/form-data"
        )
            div(class="form-group")
                label(for="fullName") Full Name *
                input(
                    type="text"
                    class="form-control"
                    id="fullName"
                    name="fullName"
                    value=account.fullName
                    required
                )
            div(class="form-group")
                label(for="email") Email *
                input(
                    type="email"
                    class="form-control"
                    id="email"
                    name="email"
                    value=account.email
                    required
                )
            div(class="form-group")
                label(for="password") Password *
                input(
                    type="password"
                    class="form-control"
                    id="password"
                    name="password"
                    required
                )
            div(class="form-group")
                label(for="phone") Phone number
                input(
                    type="text"
                    class="form-control"
                    id="phone"
                    name="phone"
                    value= account.phone
                )
            div(
                class="form-group"
                upload-image
            )
                label(for="avatar") Avatar
                input(
                    type="file"
                    class="form-control-file"
                    id="avatar"
                    name="avatar"
                    accept="image/*"
                    upload-image-input
                )
                img(
                    src= account.avatar
                    class="image-preview"
                    upload-image-preview
                )
            div(class="form-group")
                label(for="role_id") Access Control
                select(name="role_id" id="role_id" class="form-control")
                    option(disabled) -- Choose --
                    each item in roles
                        option(
                            value=item.id 
                            selected=(account.role_id == item.id ? true : false)
                        ) #{item.title}
            div(class="form-group form-check form-check-inline")
                input(
                    type="radio"
                    class="form-check-input"
                    id="statusActive"
                    name="status"
                    value="active"
                    checked=(account.status=='active' ? true : false)
                )
                label(for="statusActive" class="form-check-label") Active
            div(class="form-group form-check form-check-inline")
                input(
                    type="radio"
                    class="form-check-input"
                    id="statusInActive"
                    name="status"
                    value="inactive"
                    checked=(account.status=='inactive' ? true : false)
                )
                label(for="statusInActive" class="form-check-label") Inactive
            div(class="form-group")
                button(
                    type="submit"
                    class="btn btn-primary"
                ) Apply 

    else
        p Please create role group before updating account!
        p
            a(href=`/${prefixAdmin}/roles/create` class="btn btn-secondary") Create Role Group