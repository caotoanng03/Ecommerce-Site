extends ../../layouts/default.pug
include ../../mixins/box-head.pug
include ../../mixins/alert.pug

block main
    +alert-success(2000)

    .product-detail
        .container.my-5
            .row
                .col-6
                    .inner-thumb
                        img(src=product.thumbnail, alt=product.title)
                .col-6
                    h1(class="inner-title") #{product.title}

                    if (product.category)
                        div(class="inner-category")
                            span Category: 
                            a(href=`/products/${product.category.slug}`) #{product.category.title}

                    if (product.newPrice)
                        div(class="inner-price-new") New estimated price: #{product.newPrice}$

                    if (product.price)
                        div(class="inner-price-old") Old price: #{product.price}$

                    if (product.discountPercentage)
                        div(class="inner-percent") Discount <span>#{product.discountPercentage}%</span>

                    if (product.stock)
                        div(class="inner-stock") Left <span>#{product.stock}</span> items

                    form(
                        action=`/cart/add/${product.id}`
                        method="POST"
                    )
                        input(
                            class="form-control mb-2"
                            type="number"
                            name="quantity"
                            value="1"
                            min="1"
                            max=product.stock
                        )
                        button(
                            type="submit"
                            class="btn btn-success btn-block"
                        ) Add to Cart
        hr
        .container.my-5
            .row
                .col-12
                    +box-head("Description")
                    .inner-desc !{product.description}