extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block main
    .container.my-3
        .row
            .col-12
                +box-head("Chat")


        .row
            .col-12
                .chat
                    //- .inner-head
                    //-   .inner-avatar EY
                    //-   .inner-name Em Yêu
                    .inner-body
                        each chat in chats    
                            div(class=(chat.user_id == user.id ? "inner-outgoing" : "inner-incoming"))
                                if(chat.user_id != user.id)
                                    .inner-name #{chat.infoUser.fullName}
                                .inner-content
                                    | #{chat.content}
                        //- .inner-outgoing
                        //-     .inner-content
                        //-         | Thế à? Ok e iu
                        //- .inner-incoming
                        //-     .inner-name Em Yêu
                        //-     .inner-content
                        //-         | Nhanh nha nhanh nha
                        //- .inner-outgoing
                        //-     .inner-content
                        //-         | Ck đến rồi mà thấy ai ở nhà đâu e? Khóa cửa mà :(
                        //- .inner-incoming
                        //-     .inner-name Em Yêu
                        //-     .inner-content
                        //-         | Thì em bảo nhà e không ai ở nhà mà :))
                    .inner-foot
                        form(
                            class="inner-form"
                            action=""
                        )
                            input(
                                type="text"
                                placeholder="Enter..."
                                name="content"
                            )
                            button
                                i.fa-solid.fa-paper-plane