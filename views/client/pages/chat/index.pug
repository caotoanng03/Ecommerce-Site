extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block main
    .container.my-3

        include ../../partials/list-btn-users.pug

        .row
            .col-12
                +box-head("Chat")


        .row
            .col-12
                .chat(my-id=user.id)
                    //- .inner-head
                    //-   .inner-avatar EY
                    //-   .inner-name Em YÃªu
                    .inner-body
                        each chat in chats    
                            div(class=(chat.user_id == user.id ? "inner-outgoing" : "inner-incoming"))
                                if(chat.user_id != user.id)
                                    .inner-name #{chat.infoUser.fullName}
                                if(chat.content)
                                    .inner-content
                                        | #{chat.content}
                                if(chat.images)
                                    .inner-images
                                        each image in chat.images
                                            img(src=image)
                        div(class="inner-list-typing")
                    .inner-preview-images
                        div(class="custom-file-container" data-upload-id="upload-image")
                    .inner-foot
                        form(
                            class="inner-form"
                            action=""
                        )
                            input(
                                type="text"
                                placeholder="Enter..."
                                name="content"
                            )
                            label(
                                for="file-upload-with-preview-upload-image"
                                class="btn btn-light mx-2 mb-0"
                            )
                                <i class="fa-regular fa-image"></i>
                            span(class="button-icon btn btn-light mx-2")
                                <i class="fa-regular fa-face-smile"></i>
                            button
                                i.fa-solid.fa-paper-plane

        div(class="tooltip" role="tooltip")
            emoji-picker(class="light")

        block script
            script(type="module" src="/js/chat.js")